// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  profile Profile?
  accounts BankAccount[]
}

model Profile {
  id Int @id @default(autoincrement())
  userId Int @unique
  identity_type String
  identity_number Int
  address String
  user User @relation(fields: [userId], references: [id])
}

model BankAccount {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int
  bank_name String
  bank_account_number Int @unique
  balance Float
  source Transaksi[] @relation("sourceAccount")
  destination Transaksi[] @relation("destinationAccount")
}

model Transaksi {
  id Int @id @default(autoincrement())
  source BankAccount @relation(name: "sourceAccount", fields: [source_account_id], references: [bank_account_number])
  destination BankAccount @relation(name: "destinationAccount", fields: [destination_account_id], references: [bank_account_number])
  source_account_id Int
  destination_account_id Int
  amount Float
  createdAt DateTime @default(now())
}

model Image {
  id Int @id @default(autoincrement())
  title String
  description String
  url String @unique
  type String
  size Int
  createdAt DateTime @default(now())
}